@model Assistant;
@{
    ViewData["Title"] = "Edit";
}

<div class="card">
            <div class="card-body">
                                <h5 class="text-center">Edit Assistant</h5>

              <form class="row g-3" asp-controller="Assistants" asp-action="Edit">
                  <div class="col-12">

                  <input type="text"  asp-for="AssistantID" hidden>
                </div>
                <div class="col-12">
                  <label asp-for="Name" class="form-label">Name</label>
                  <input asp-for="Name" class="form-control" >
                                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="col-12">
                  <label asp-for="Surname" class="form-label">Surename</label>
                  <input asp-for="Surname" class="form-control" >
                                    <span asp-validation-for="Surname" class="text-danger"></span>

                </div>
                <div class="col-12">
                  <label asp-for="Email" class="form-label">Email</label>
             <select asp-for="Email" class="form-control" asp-items="ViewBag.userManager"></select>
                                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                <div class="col-12">
                  <label asp-for="PhoneNumber" class="form-label">Address</label>
                  <input asp-for="PhoneNumber" class="form-control">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                </div>
                 <div class="col-12">
                  <label asp-for="Address" class="form-label">Address</label>
                  <input asp-for="Address" class="form-control"  placeholder="1234 Main St">
                                    <span asp-validation-for="Address" class="text-danger"></span>

                </div>
                 <div class="col-12">
                  <label for="InstructorID" class="form-label">Select instructor</label>
                  <select asp-for="InstructorID" class="form-control" asp-items="ViewBag.Instructors"></select>
                  <span asp-validation-for="InstructorID" class="text-danger"></span>

                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Update</button>
                  <button type="reset" class="btn btn-secondary">Cancel</button>
                </div>
              </form>

            </div>
          </div>

