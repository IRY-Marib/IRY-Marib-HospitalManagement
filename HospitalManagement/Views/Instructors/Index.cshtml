@{
    ViewBag.Title = "Instrutor";
}
@model  List<Instructor>;
@{

  
      <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Instructors</h5>
              <a class="btn btn-primary float-end  "  asp-controller="Instructors" asp-action="Create">Add New Instructors</a>
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th>
                      <b>I</b>nstructorID   
                    </th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th data-type="email">Email</th>
                    <th>PhoneNumber</th>
                    <th>Address</th>
                    <th>Actions</th>

                  </tr>
                </thead>
                <tbody>
                @foreach(var list in  Model)
                {
                  <tr>
                    <td>@list.InstructorID</td>
                    <td>@list.Name</td>
                    <td>@list.Surname</td>
                    <td>@list.Email</td>
                    <td>@list.PhoneNumber</td>
                                        <td>@list.Address</td>

                    <td><a asp-controller="Instructors"   asp-action="Edit" asp-route-id="@list.InstructorID" class="btn btn-warning">Edit</a>
                    <a asp-controller="Instructors"   asp-action="Delete" asp-route-id="@list.InstructorID" class="btn btn-danger">Delete</a></td>


                  </tr>
                }
                 
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>
}
