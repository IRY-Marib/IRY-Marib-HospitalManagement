@model Department;


<section class="section">
      <div class="row">
        <div class="col-lg-12">
<div class="card">
            <div class="card-body">
                <h5 class="text-center">Create Department</h5>

              <form asp-controller="Departments" asp-action="Create" method="post" class="row g-3">
                <div class="col-12">

                  <label  for="Name" class="form-label"> Name</label>
                  <input type="text" class="form-control" id="Name" name="Name">
                  <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                  <label for="Description" class="form-label"> Description</label>
                  <input type="text" class="form-control" name="Description">
                  <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="col-12">
                  <label for="TotalBeds" class="form-label">TotalBeds</label>
                  <input type="number" class="form-control" name="TotalBeds" id=0>
                  <span asp-validation-for="TotalBeds" class="text-danger"></span>
                </div>
                <div class="col-12">
                  <label for="AvailableBeds" class="form-label">AvailableBeds</label>
                  <input type="number" class="form-control" name="AvailableBeds">
                   <span asp-validation-for="AvailableBeds" class="text-danger"></span>

                </div>
                <div class="col-12">
                  <label for="PatientCount" class="form-label">PatientCount</label>
                  <input type="number" class="form-control" name="PatientCount">
                  <span asp-validation-for="PatientCount" class="text-danger"></span>

                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
</div>
</div>

</div>
</section>