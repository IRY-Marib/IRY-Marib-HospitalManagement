@{
    ViewBag.Title = "Departments";
}
@model  List<Department>;
@{

  
      <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title text-center">Departments</h5>
              <a class="btn btn-primary float-end "  asp-controller="Departments" asp-action="Create">Add New Department</a>
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th>
                      <b>D</b>epartmentID
                    </th>
                    <th>Name</th>
                    <th>Description</th>
                    <th >TotalBeds</th>
                    <th>AvailableBeds</th>
                     <th>PatientCount</th>
                       <th>Actions</th>


                  </tr>
                </thead>
                <tbody>
                @foreach(var list in  Model)
                {
                  <tr>
                    <td>@list.DepartmentID</td>
                    <td>@list.Name</td>
                    <td>@list.Description</td>
                    <td>@list.TotalBeds</td>
                    <td>@list.AvailableBeds</td>
                     <td>@list.PatientCount</td>

                    <td><a asp-controller="Departments"   asp-action="Edit" asp-route-id="@list.DepartmentID" class="btn btn-warning">Edit</a>
                    <a asp-controller="Departments"   asp-action="Delete" asp-route-id="@list.DepartmentID" class="btn btn-danger">Delete</a></td>


                  </tr>
                }
                 
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>
}
